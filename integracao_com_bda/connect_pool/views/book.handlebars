<div class="book-page">
  <a href="/books">Voltar</a>
  <div class="container">
    <h1>{{ book.title }}</h1>
    <p>Este livro tem {{ book.pages }} páginas.</p>
    <div class="actions">
      <a href="/books/edit/{{ book.id }}">Edit</a>
      <form action="/books/remove/" method="POST">
        <!-- Outra maneira seria passar o id em action e criar um url dinâmica -->
        <input type="hidden" name="id" value="{{ book.id }}">
        <input type="submit" value="Delete">
      </form>
    </div>
  </div>
</div>